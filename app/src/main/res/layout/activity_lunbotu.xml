<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Lunbotu">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/rollPagerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:rollviewpager_play_delay="2000">
    </com.jude.rollviewpager.RollPagerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入文件名"/>

        <EditText
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入文件名..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入文件内容"/>

        <EditText
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入内容"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/writein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"/>
        <Button
            android:id="@+id/readout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读出数据"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入文件名称"/>

        <EditText
            android:id="@+id/file_name_inSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入文件名称..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入文件内容"/>

        <EditText
            android:id="@+id/file_content_inSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入文件内容..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/writeinSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入SD卡"/>
        <Button
            android:id="@+id/cleartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"/>
        <Button
            android:id="@+id/readoutSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读出SD卡数据"/>

    </LinearLayout>



</LinearLayout>